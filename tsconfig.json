{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"outDir": "out",
		"lib": [
			"ES6"
		],
		"baseUrl": "./",
		"paths": {
			"@shared/*": [
				"shared/*"
			]
		},
		"sourceMap": true,
		"rootDir": ".",
		"strict": true /* enable all strict type-checking options */
	},
	"include": [
		"src/**/*",
		"shared/**/*"
	]
}