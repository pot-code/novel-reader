{
	"compilerOptions": {
		"module": "ESNext",
		"target": "esnext",
		"jsx": "preserve",
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "./",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"dom",
			"es6"
		],
		"paths": {
			"@shared/*": [
				"../shared/*"
			]
		},
		"strict": true /* enable all strict type-checking options */
	},
	"include": [
		"./**/*"
	]
}