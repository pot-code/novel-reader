{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "esnext",
		"jsx": "preserve",
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			// WARN: sync with tsconfig
			"@hooks/*": [
				"hooks/*"
			],
			"@assets/*": [
				"assets/*"
			]
		},
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": [
			"dom",
			"es6"
		]
	},
	"include": [
		"./**/*"
	]
}